@model TaskUsingEFCore.Models.CountryTable;
@{ 
    <form asp-controller="CountryTable" asp-action="Demo">

        <div class="form-group">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="CountryName" class="control-label"></label>
                <select asp-for="CountryId" class="form-control" 
                        asp-items="@(new SelectList(@ViewBag.ListOfCountrys,"CountryId","CountryName"))">

                </select>
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="submit" value="submit"/>
            </div>
            <div>
                <a asp-action="Create">Create</a>
            </div>
        </div>
    </form>
}
